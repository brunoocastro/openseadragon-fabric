{
  "compilerOptions": {
    "module": "ES6",
    "target": "ESNext",
    "noImplicitAny": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
